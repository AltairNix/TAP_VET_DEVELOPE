@model Entidad.Usuario
@{
    ViewBag.Title = "Create";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="~/Content/materialize/css/materialize.min.css" media="screen,projection" />
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>


<body>
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="~/Content/materialize/js/materialize.min.js"></script>

    <h2>Create</h2>

    @using (Html.BeginForm())
    {
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s6">
                        @Html.TextBoxFor(model => model.Nom_usuario, new { @class = "validate" })
                        <label for="Nom_usuario">Nombres</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        @Html.TextBoxFor(model => model.Ape_paterno, new { @class = "validate" })
                        <label for="Ape_paterno">Apellido Paterno</label>
                    </div>
                    <div class="input-field col s6">
                        @Html.TextBoxFor(model => model.Ape_materno, new { @class = "validate" })
                        <label for="Ape_materno">Apellido Materno</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        @Html.TextBoxFor(model => model.Tel_fijo, new { @class = "validate" })
                        <label for="Tel_fijo">Teléfono Fijo</label>
                    </div>
                    <div class="input-field col s6">
                        @Html.TextBoxFor(model => model.Tel_celular, new { @class = "validate" })
                        <label for="Tel_celular">Teléfono Celular</label>
                    </div>
                </div>
            </form>
        </div>
    }



</body>
</html>

